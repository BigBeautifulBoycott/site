---
// src/components/Faq.astro

export interface FaqItem {
  Question: string;
  Answer: string;
}

export interface Props {
  heading?: string;
  subheading?: string;
  items?: FaqItem[];
}

const {
  heading = "What is the Big Beautiful Boycott?",
  subheading = "",
  items = [],
} = Astro.props as Props;
---

<section
  id="bbb-faq"
  aria-labelledby="faq-heading"
  class="relative mb-10 overflow-hidden rounded-3xl border border-base-300/70 bg-gradient-to-br from-base-200/80 via-base-100 to-base-100 shadow-sm"
>
  <!-- Decorative blobs -->
  <div class="pointer-events-none absolute -top-24 -left-24 size-72 rounded-full bg-primary/10 blur-3xl"></div>
  <div class="pointer-events-none absolute -bottom-28 -right-24 size-72 rounded-full bg-secondary/10 blur-3xl"></div>

  <div class="p-4 sm:p-6 lg:p-8">
    <header class="mb-5">
      <h2 id="faq-heading" class="text-3xl font-extrabold tracking-tight">
        {heading}
      </h2>
      {subheading && (
        <p class="mt-1 text-sm sm:text-base opacity-75 max-w-prose">
          {subheading}
        </p>
      )}
    </header>

    {items.length > 0 && (
      <div class="grid gap-4 lg:gap-6 md:grid-cols-2">
        {items.map((item, idx) => (
          <article
            class="group card bg-base-100/90 border border-base-300/60 shadow-sm transition-all hover:shadow-md hover:-translate-y-0.5"
          >
            <div class="card-body">
              <div class="flex items-start gap-3">
                {/* Simple icon (same for all for now) */}
                <svg
                  class="mt-0.5 size-6 opacity-70 group-hover:opacity-100"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M12 2a10 10 0 1 0 10 10A10.011 10.011 0 0 0 12 2Zm1 15h-2v-2h2Zm0-4h-2V7h2Z" />
                </svg>

                <div>
                  <h3 class="text-xl font-semibold mb-1">
                    {item.Question}
                  </h3>
                  <p class="leading-relaxed whitespace-pre-line">
                    {item.Answer}
                  </p>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    )}
  </div>
</section>
